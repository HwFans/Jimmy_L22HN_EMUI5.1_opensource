#
#Fingerprint
#
menu "Fingerprint support"
	depends on INPUT

config MTK_FINGERPRINT_SUPPORT
	bool "Mediatek Fingerprint"
	default n
	---help---
	Fingerprint mtk driver enable/disable in the kernel.
	Say Y here if you want to use mediatek fingerprint driver,
	fingerprint driver will support fingerprint function
if MTK_FINGERPRINT_SUPPORT
config MTK_FINGERPRINT_SELECT
	string "sensor type"
	default "fingerprint"


if MTK_FINGERPRINT_SELECT = "FPC1145"
config FPC_FINGERPRINT
	bool "FPC Fingerprint"
	default y
	---help---
	FPC fingerprint FPC's 102x/104x device.
endif
# add by changjingyang start
#Gionee <GN_BSP_FP> <sunwave> <2017-02-22> add for sunwave fingerprint, start
if MTK_FINGERPRINT_SELECT = "sunwave"

config SUNWAVE_FINGERPRINT
       tristate "Sunwave Fingerprint"
       default y
       ---help---
       sunwave fingerprint device.
endif
#Gionee <GN_BSP_FP> <sunwave> <2017-02-22> add for sunwave fingerprint, end
#Gionee <GN_BSP_FP> <silead_fp> <2017-02-06> add for silead fingerprint, start
# add by changjingyang end
if MTK_FINGERPRINT_SELECT = "fingerprint"
config HUAWEI_FINGERPRINT
	bool "Huawei Fingerprint"
	default y
	---help---
	Huawei Fingerprint chip GOODIX/SILEAD TEE driver
config GOODIX_FINGERPRINT
	bool "Goodix Fingerprint"
	default y
	---help---
	Goodix Fingerprint chip GF316M/GF318M/GF3118M/GF518M/GF5118M/GF516M/GF816M/GF3208/GF5216 TEE driver

config GOODIX_SENSOR_TYPE
	string "SENSOR_TYPE"
	default "GF318M"
	---help---
	Must input sensor type, or default is GF316M GF318M GF3118M GF518M GF5118M GF516M GF816M GF3208 GF5216
endif
endif
endmenu
